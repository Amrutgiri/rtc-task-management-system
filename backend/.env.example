# Environment Variables for Backend (.env)

# Server
PORT=3232
NODE_ENV=production

# MongoDB Atlas (Get from MongoDB Atlas Dashboard)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/tms?retryWrites=true&w=majority

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Frontend URL (will be your Vercel frontend URL)
FRONTEND_URL=https://your-frontend-app.vercel.app

# CORS Origins (add your frontend URL)
CORS_ORIGIN=https://your-frontend-app.vercel.app
